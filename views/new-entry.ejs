<% include header %>

<h2>Write a new entry</h2>

<form method="post" role="form">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title"
            name="title" placeholder="Entry title" required>
    </div>
    <div class="form-group">
        <label for="content">Entry text</label>
        <textarea class="form-control" id="body" name="entryText"
            placeholder="Love Express! It's a great tool for
            building websites." rows="3"></textarea>
    </div>
    <div class="form-group">
        <input type="submit" value="Post entry" class="btn btn-primary">
    </div>
</form>
<div id="post-stream" >
    <h4>Entry Feed</h4>
    <!--to be populated by Angular-->
    <div class="post">
    
    </div>
    

</div>

<% include footer %>